<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgstat"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.co2mpare.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.08" />

    <com.co2mpare.androidplot.MultitouchPlot
        android:id="@+id/multiplot"
        android:layout_width="fill_parent"
        android:layout_height="226dp"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:layout_marginTop="15dp"
        android:layout_weight="0.70"
        title="The economy" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08" >
        
	 <RadioGroup
	     android:id="@+id/radiosel"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignParentLeft="true"
	     android:layout_alignParentRight="true"
	     android:gravity="center_horizontal"
	     android:orientation="horizontal" >

	     <RadioButton
	         android:id="@+id/rdbtnmoney"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="Money" />
        
        <RadioButton android:id="@+id/rdbtnco2"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			 
			android:text="CO2" />
        
        </RadioGroup>

    </RelativeLayout>

    <TextView
        android:id="@+id/saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:text="You saved:"
        android:textColor="#009900" />

</LinearLayout>